{{template "base" .}}

{{define "content"}}
<div class="container">
  <div class="row">
    <div class="col">
      <h1>Hello, About</h1>
      <p>Welcome to the about page!</p>
      <p>
        This is a simple web application built with Go and Bootstrap. Explore
        the features and enjoy your stay!
      </p>
      <p>From Template = {{ index .StringMap "test" }}</p>
      <p>
        {{if ne (index .StringMap "remote_ip") ""}}
        IP ADDRESS : {{index .StringMap "remote_ip"}}
        {{else}}
        IP ADDRESS : Not available. Visit <a href="/">Home Page</a>
        {{ end }}
      </p>
    </div>
  </div>
</div>
{{ end }}
